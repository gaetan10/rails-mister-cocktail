<h2>Choose your cocktail for the night</h2>


<div class="container">
  <div class="row">
    <div class="col-xs-6 col-md-3">
    <% @cocktails.each do |cocktail| %>
    <div class="card">
      <p><%= link_to cocktail.name, cocktail_path(cocktail) %></p>
      <%= link_to "Delete", cocktail_path(cocktail), method: :delete %>
      <hr />
    </div>
     <% end %>
    </div>
  </div>
</div>


