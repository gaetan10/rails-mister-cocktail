<div class="banner">
  <h1>Welcome to Groomy</h1>
  <h3>Happyness of a bar in a website</h3>
</div>



<div class="container">
<h2>Choose your cocktail for the night</h2>


  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-6 col-md-4">

        <% if cocktail.photo? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= cl_image_path (cocktail.photo) %>')" >
            <p><%= link_to cocktail.name, cocktail_path(cocktail),{id:"name"} %></p>
            <!-- <p id="remove"><%= link_to "Delete", cocktail_path(cocktail), method: :delete %></p> -->
          </div>
        <% else %>
          <div class="card" style="background-image:url('http://www.dickson-constant.com/medias/images/catalogue/api/m654-grey-680.jpg')" >
            <p><%= link_to cocktail.name, cocktail_path(cocktail), {id:"name"} %></p>
            <p id="no-picture">(NO PICTURE)</p>
             <!--  <p><%= link_to "Delete", cocktail_path(cocktail), method: :delete %></p> -->
          </div>
        <% end %>
        </div>
    <% end %>
  </div>
</div>



